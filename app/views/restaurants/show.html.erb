<h2><%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %> restaurant</p>
<%= link_to 'Go back', restaurants_path %>

<%= link_to 'Write a reviews for this restaurant', new_restaurant_review_path(@restaurant.id) %>


<h2>Reviews for <%= @restaurant.name %></h2>
<div>
  <% @restaurant.reviews.each do |review| %>
    <p>Star Rating: <%= review.rating %></p>
    <p><%= review.content %></p>
  <% end %>
</div>

